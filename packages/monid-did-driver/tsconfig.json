{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": false,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "build",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "exclude": [
    "build",
    "node_modules"
  ]
}